<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_iluminado2"
    tools:context=".TareasActivity">

  <ScrollView
      android:id="@+id/scroll_content"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toTopOf="@+id/cardMenuInferior">

    <LinearLayout
        android:id="@+id/container_superior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

      <androidx.appcompat.widget.Toolbar
          android:id="@+id/toolbar_tareas"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          app:title="Live&amp;Tasks"
          app:titleTextColor="@color/black" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Dale cuerpo a tus ideas y organizalas con ayuda de IA."
          android:textColor="@color/black"
          android:textStyle="italic" />

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="15dp"
          app:cardCornerRadius="25dp"
          app:cardElevation="8dp"
          app:layout_constraintBottom_toTopOf="@+id/cardMenuInferior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="454dp"
            android:orientation="vertical"
            android:padding="20dp">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Mis notas"
              android:textColor="@color/black"
              android:textSize="20sp"
              android:textStyle="bold" />

        </LinearLayout>
      </androidx.cardview.widget.CardView>

      <com.google.android.material.button.MaterialButton
          android:id="@+id/btn_ia"
          android:layout_width="70dp"
          android:layout_height="wrap_content"
          android:backgroundTint="#EBEBEB"
          android:text="IA"
          android:textColor="@color/black"
          android:layout_gravity="start"
          android:layout_marginTop="10dp"
          app:cardCornerRadius="25dp"
          app:cardElevation="8dp"/>

    </LinearLayout>
  </ScrollView>
  <androidx.cardview.widget.CardView
      android:id="@+id/cardMenuInferior"
      android:layout_width="0dp"
      android:layout_height="65dp"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      android:layout_marginBottom="20dp"
      app:cardBackgroundColor="#EDE5E5"
      app:cardCornerRadius="30dp"
      app:cardElevation="10dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp">

      <com.google.android.material.button.MaterialButton
          android:id="@+id/btn_tareas"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginHorizontal="4dp"
          app:backgroundTint="@color/black"
          app:cornerRadius="20dp"
          app:icon="@drawable/whitetasks"
          app:iconSize="24dp"
          app:iconTint="@color/white"
          android:insetTop="0dp"
          android:insetBottom="0dp"/>

      <com.google.android.material.button.MaterialButton
          android:id="@+id/btn_calendario"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="4dp"
          android:layout_weight="1"
          android:insetTop="0dp"
          android:insetBottom="0dp"
          app:backgroundTint="@color/white"
          app:cornerRadius="20dp"
          app:icon="@drawable/blackcalendar"
          app:iconSize="24dp"
          app:iconTint="@color/black" />

      <com.google.android.material.button.MaterialButton
          android:id="@+id/btn_monitoreo"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginHorizontal="4dp"
          app:backgroundTint="@color/white"
          app:cornerRadius="20dp"
          app:icon="@drawable/blackgraphic"
          app:iconSize="24dp"
          app:iconTint="@color/black"
          android:insetTop="0dp"
          android:insetBottom="0dp"/>

      <com.google.android.material.button.MaterialButton
          android:id="@+id/btn_notas"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginHorizontal="4dp"
          app:backgroundTint="@color/white"
          app:cornerRadius="20dp"
          app:icon="@drawable/blacknotes"
          app:iconSize="24dp"
          app:iconTint="@color/black"
          android:insetTop="0dp"
          android:insetBottom="0dp"/>

    </LinearLayout>
  </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>