<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_iluminado2"
    tools:context=".TareasActivity">

        <LinearLayout
            android:id="@+id/container_superior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_tareas"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Live&amp;Tasks"
                app:titleTextColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dale cuerpo a tus ideas y organizalas con ayuda de IA."
                android:textColor="@color/black"
                android:textStyle="italic" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                app:backgroundTint="@color/black"
                android:padding="0dp"
                app:icon="@drawable/whiteplus"
                app:iconGravity="textStart"
                app:iconSize="24dp"
                app:iconTint="@color/white"
                app:cornerRadius="12dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:orientation="horizontal"
                        android:layout_gravity="end">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_delete"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="left"
                            android:padding="0dp"
                            app:backgroundTint="@color/white"
                            app:cornerRadius="20dp"
                            app:icon="@drawable/bin"
                            app:iconSize="18dp"
                            app:iconTint="@color/black" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_edit"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="end"
                            android:layout_marginEnd="4dp"
                            android:padding="0dp"
                            app:backgroundTint="@color/white"
                            app:cornerRadius="20dp"
                            app:icon="@drawable/edit"
                            app:iconSize="18dp"
                            app:iconTint="@color/black" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reunión de equipo"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Trabajo        Propuesta" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Hablar sobre la planificación del proyecto." />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Fecha vencimiento: 2026/02/20"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="#E0E0E0"
                        app:cardCornerRadius="25dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Sugerencia IA"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:orientation="horizontal"
                        android:layout_gravity="end">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_delete2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="left"
                            android:padding="0dp"
                            app:backgroundTint="@color/white"
                            app:cornerRadius="20dp"
                            app:icon="@drawable/bin"
                            app:iconSize="18dp"
                            app:iconTint="@color/black" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_edit2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="end"
                            android:layout_marginEnd="4dp"
                            android:padding="0dp"
                            app:backgroundTint="@color/white"
                            app:cornerRadius="20dp"
                            app:icon="@drawable/edit"
                            app:iconSize="18dp"
                            app:iconTint="@color/black" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diseño del proyecto"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Trabajo        En curso" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Diseñar vistas y lógica de la aplicación." />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Fecha vencimiento: 2026/03/21"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="#E0E0E0"
                        app:cardCornerRadius="25dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Sugerencia IA"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ia"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:text="IA"
                android:textColor="@color/white"
                android:layout_gravity="start"
                app:cardCornerRadius="25dp"
                app:cardElevation="8dp"/>
        </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardMenuInferior"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="#EDE5E5"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_tareas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                app:backgroundTint="@color/black"
                app:cornerRadius="20dp"
                app:icon="@drawable/whitetasks"
                app:iconSize="24dp"
                app:iconTint="@color/white"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_calendario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                app:backgroundTint="@color/white"
                app:cornerRadius="20dp"
                app:icon="@drawable/blackcalendar"
                app:iconSize="24dp"
                app:iconTint="@color/black"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_monitoreo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                app:backgroundTint="@color/white"
                app:cornerRadius="20dp"
                app:icon="@drawable/blackgraphic"
                app:iconSize="24dp"
                app:iconTint="@color/black"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_notas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                app:backgroundTint="@color/white"
                app:cornerRadius="20dp"
                app:icon="@drawable/blacknotes"
                app:iconSize="24dp"
                app:iconTint="@color/black"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>